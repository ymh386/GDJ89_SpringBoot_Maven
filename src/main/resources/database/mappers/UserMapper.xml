<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.moon.app.user.UserDAO">
  
  	<insert id="join" parameterType="UserVO">
  		INSERT INTO USER_TBL
  		(USERNAME, PASSWORD,NAME, PHONE, EMAIL, BIRTH, FILE_NAME, ORI_NAME)
  		VALUES
  		(#{username}, #{password},#{name}, #{phone}, #{email}, #{birth}, #{fileName}, #{oriName})
  	</insert>
  	
  	<select id="detail" parameterType="UserVO" resultMap="detailResult">
		SELECT *
		FROM USER_TBL U
			 INNER JOIN
			 MEMBER_ROLE_TBL MR
			 USING (USERNAME)
			 INNER JOIN
			 ROLE_TBL R
			 USING (ROLE_NUM)
		WHERE USERNAME=#{username}
  
  	</select>
  	
  	<resultMap type="UserVO" id="detailResult">
  		<id column="USERNAME" property="username"/>
  		<result column="PASSWORD" property="password"/>
  		<result column="NAME" property="name"/>
  		<result column="PHONE" property="phone"/>
  		<result column="EMAIL" property="email"/>
  		<result column="BIRTH" property="birth"/>
  		<result column="FILE_NAME" property="fileName"/>
  		<result column="ORI_NAME" property="oriName"/>
  		<result column="ACCOUNTNONEXPIRED" property="accountNonExpired"/>
  		<result column="ACCOUNTNONLOCKED" property="accountNonLocked"/>
  		<result column="CREDENTIALSNONEXPIRED" property="credentialsNonExpired"/>
  		<result column="ENABLED" property="enabled"/>
  		<collection property="list" javaType="java.util.List" ofType="RoleVO">
  			<id column="ROLE_NUM" property="roleNum"/>
  			<result column="ROLE_NAME" property="roleName"/>
  		</collection>
  	
  	</resultMap>
  	
  </mapper>